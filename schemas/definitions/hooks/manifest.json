{
    "title": "Hook Manifest",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/hooks/manifest.json",
    "type": "object",
    "required": [
        "source",
        "name",
        "stage",
        "context"
    ],
    "properties": {
        "source": {
            "type": "string",
            "format": "url"
        },
        "name": {
            "type": "string"
        },
        "stage": {
            "type": "string",
            "enum": [
                "pre", "post"
            ]
        },
        "context": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "user", "guild", "channel"
                ]
            }
        }
    }
}