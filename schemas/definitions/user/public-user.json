{
    "title": "Public User Information Schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/user/public-user.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema" ,
    "type": "object",
    "required": [
        "origin",
        "keys",
        "profile",
        "rep"
    ],
    "properties": {
        "origin": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/origin.json"
        },
        "keys": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/crypto/keypair.json"
        },
        "profile": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/user/profile.json"
        },
        "rep": {
            "type": "array",
            "contains": {
                "type": "object",
                "$ref": "https://static.echo-chat.au/schemas/definitions/user/reputation/remark.json"
            }
        }
    }
}