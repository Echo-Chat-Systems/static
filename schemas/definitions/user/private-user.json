{
    "title": "Private User Information Schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/user/private-user.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema" ,
    "type": "object",
    "required": [
        "origin",
        "keys",
        "profile",
        "rep",
        "hooks"
    ],
    "properties": {
        "origin": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/meta/origin.json"
        },
        "keys": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/crypto/keypair.json"
        },
        "profile": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/user/profile.json"
        },
        "rep": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/user/reputation/rep.json"
        },
        "settings": {
            "type": "string",
            "format": "base64"
        },
        "hooks": {
            "type": "object",
            "required": [
                "enabled", "blocked"
            ],
            "properties": {
                "enabled": {
                    "type": "array",
                    "items": {
                        "$ref": "https://static.echo-chat.au/schemas/snowflake.json"
                    }
                },
                "blocked": {
                    "type": "array",
                    "items": {
                        "$ref": "https://static.echo-chat.au/schemas/snowflake.json"
                    }
                }
            }
        }
    }
}