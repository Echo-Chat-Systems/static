{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/crypto/user-file.json",
    "title": "User File Schema",
    "description": "A user file contains only the user's keys and server information.",
    "type": "object",
    "required": ["keys", "server"],
    "properties": {
        "keys": {
            "description": "User full keyset",
            "type": "object",
            "properties": {
                "pub_sk": {
                    "type": "string",
                    "format": "base64"
                },
                "pub_ek": {
                    "type": "string",
                    "format": "base64"
                },
                "prv_sk": {
                    "type": "string",
                    "format": "base64"
                },
                "prv_ek": {
                    "type": "string",
                    "format": "base64"
                }
            },
            "required": [
                "pub_sk",
                "prv_sk",
                "pub_ek",
                "prv_ek"
            ]
        },
        "server": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string",
                    "format": "uri"
                },
                "port": {
                    "type": "integer"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "address",
                "port",
                "version"
            ]
        }
    },
    "examples": [
        {
            "keys": {
                "pub_sk": "PVhWeSQ4L2R6VVV0TVtIM0xiTjJfXFtK",
                "prv_sk": "RGZEZTxQNzkrakEsZXFdUG99P0U+WGVl",
                "pub_ek": "NkNJb0l0YV0rRi1hVXI7ajgyVVUyeA==",
                "prv_ek": "JmomL0NOaVhoU0t7IGJJJCtbTzVJP19b"
            },
            "server": {
                "address": "https://echo-chat.au",
                "port": 443,
                "version": "1.0.0"
            }
        }
    ]
}