{
    "title": "Channel Configuration Information Schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/channel/config.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "modes",
        "encrypted"
    ],
    "properties": {
        "modes": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["text", "voice"]
            }
        },
        "encrypted": {
            "type": "boolean"
        },
        "access": {
            "type": "object",
            "required": [],
            "properties": {
                "minimum-role-index": {
                    "type": "integer"
                }
            }
        },
        "notifications": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/definitions/postie/notif-config.json"
        }
    }
}