{
    "title": "Channel Information Schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/channel/channel.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "id",
        "name",
        "index",
        "config",
        "customisation"
    ],
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "parent": {
            "$ref": "https://static.echo-chat.au/schemas/snowflake.json"
        },
        "index": {
            "type": "integer",
            "minimum": 1
        },
        "members": {
            "type": "array",
            "items": {
                "$ref": "https://static.echo-chat.au/schemas/channel/member.json"
            }
        },
        "config": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/channel/config.json"
        },
        "customisation": {
            "type": "object",
            "$ref": "https://static.echo-chat.au/schemas/channel/customisation.json"
        }
    }
}