{
    "title": "Emoji Information Schema",
    "$id": "https://static.echo-chat.au/schemas/definitions/media/emoji.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "id",
        "from",
        "ref"
    ],
    "properties": {
        "id": {
            "$ref": "https://static.echo-chat.au/schemas/snowflake.json"
        },
        "name": {
            "type": "string",
            "description": "Name of the emoji."
        },
        "from": {
            "type": "string",
            "enum": ["guild", "server"]
        },
        "ref": {
            "type": "string"
        },
        "source": {
            "$ref": "https://static.echo-chat.au/schemas/snowflake.json",
            "description": "Guild ID of the emoji if it is a custom emoji."
        },
        "size": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                }
            }
        }
    }
}