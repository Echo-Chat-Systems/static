{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/static/schemas/user/reputation/remark.json",
    "title": "User Reputation Remark Schema",
    "type": "object",
    "properties": {
        "/": {}
    },
    "patternProperties": {
        "^.*$": {
            "type": "object",
            "properties": {
                "direction": {
                    "type": "integer",
                    "minimum": -1,
                    "maximum": 1
                },
                "user": {
                    "type": "string",
                    "format": "base64"
                },
                "comment": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "string",
                    "format": "datetime"
                }
            },
            "required": [
                "direction",
                "user"
            ]
        }
    },
    "examples": [
        {
            "bSNvOjhOUjVGYS4lKyNqUEpJeURBWQ==": {
                "direction": 1,
                "user": "M2NMU0ovaWUpN2ZxIjRmWC5AUVpiWA==",
                "comment": "Great user, very helpful!"
            }
        },
        {
            "RXI0TVMkTTtCYE5pLVh+SFlLbWA9RE5e": {
                "direction": -1,
                "user": "dDMtMlRheyVPWS9FV15nOEAuXHNCNy1s",
                "comment": "Had a bad experience, would not recommend."
            }
        }
    ]
}
