{
    "title": "Channel Configuration Information Schema",
    "$id": "https://static.echo-chat.au/schemas/channel/config.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "access"
    ],
    "properties": {
        "modes": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["text", "voice"]
            }
        },
        "chat-enabled": {
            "type": "boolean",
            "default": true
        },
        "access": {
            "type": "object",
            "required": [],
            "properties": {
                "minimum-role-index": {
                    "type": "integer"
                }
            }
        }
    }
}