{
    "title": "Channel Configuration Information Schema",
    "$id": "https://static.echo-chat.au/schemas/channel/config.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "access"
    ],
    "properties": {
        "access": {
            "type": "object",
            "required": [],
            "properties": {
                "minimum-role-index": {
                    "type": "integer"
                }
            }
        }
    },
    "patternProperties": {
        "^type$": {
            "type": "string"
        }
    }
}