{
    "title": "Basic WS Message Format",
    "$id": "https://static.echo-chat.au//schemas/comms/basic-message.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": ["target", "data"],
    "properties": {
        "target": {
            "type": "string"
        },
        "data": {
            "type": "object",
            "required": ["action", "params"],
            "properties": {
                "action": {
                    "type": "string"
                },
                "params": {
                    "type": "object"
                }
            }
        }
    }
}